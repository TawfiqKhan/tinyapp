<header>
  <nav class="px-5 navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyAPP</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <div>
      <% if(user && user.id) { %>
        <form class="d-flex justify-content-end align-items-center " method="POST" action="/logout">
          <div class="text-white">
            <span class="mt-10" style="font-size: 1.2rem; margin-right: 2rem;">
              Logged in as: <%= user.email %>
            </span>
          </div>
          <div>
            <button class="px-5 btn btn-danger">LOGOUT</button>
          </div>
        </form>
        <% } else { %> %>
          <a class="px-5 btn btn-info" href="/login">LOGIN</a>
          <a class="px-5 btn btn-primary" href="/register">Register</a>
          <% } %>
    </div>
  </nav>
</header>